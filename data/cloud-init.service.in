[Unit]
Description=cloud-init job
After=local-fs.target
Before=cloud-init.service network.target systemd-networkd.service
Wants=local-fs.target sshd.service sshd-keygen.service

[Service]
Type=oneshot
ExecStart=@prefix@/bin/cloud-init --fix-disk --first-boot-setup --metadata --user-data-once
RemainAfterExit=yes
TimeoutSec=0

# Output needs to appear in instance console output
StandardOutput=journal+console

[Install]
WantedBy=multi-user.target
